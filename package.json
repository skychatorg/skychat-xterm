{
    "name": "skychat-xterm",
    "version": "1.0.0",
    "description": "Web-based terminal interface for SkyChat CLI using xterm.js",
    "main": "dist/server/index.js",
    "type": "module",
    "scripts": {
        "build:server": "tsc -p tsconfig.json",
        "build:client": "tsc -p app/client/tsconfig.json && npm run copy:client-assets",
        "copy:client-assets": "mkdir -p dist/client && cp -r app/client/public/* dist/client/",
        "build": "npm run build:server && npm run build:client",
        "start": "npm run build && node dist/server/index.js",
        "dev": "NODE_ENV=development tsx app/server/index.ts",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:dev": "docker compose up",
        "docker:down": "docker compose down",
        "lint": "eslint app/server/**/*.ts app/client/src/**/*.ts",
        "format": "prettier --write app/**/*.ts",
        "format:check": "prettier --check app/**/*.ts"
    },
    "keywords": [
        "skychat",
        "terminal",
        "xterm",
        "websocket",
        "pty"
    ],
    "author": "7PH <b.raymond@protonmail.com>",
    "license": "ISC",
    "dependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/jsonwebtoken": "^9.0.10",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "fs-extra": "^11.3.2",
        "jsonwebtoken": "^9.0.3",
        "nanoid": "^5.0.4",
        "node-pty": "^1.0.0",
        "skychat": "^2.1.0",
        "skychat-cli": "^0.5.0",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "@types/express": "^5.0.5",
        "@types/node": "^24.10.1",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.7.1",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
