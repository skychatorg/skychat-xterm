# Application Configuration
NODE_ENV=development
PORT=3000

# Public URL and Host Configuration
PUBLIC_URL=http://xterm.skych.at.localhost:8081
PUBLIC_HOST=xterm.skych.at.localhost
PUBLIC_PORT=8081
BIND_INTERFACE=0.0.0.0

# TLS Configuration (set to any value to enable TLS in production)
USE_TLS=

# Admin Email (for Let's Encrypt)
ADMIN_EMAIL=adminemail@org.org

# SkyChat Configuration
SKYCHAT_HOST=skychat-instance.com
SKYCHAT_PROTOCOL=wss

# Session Management
SESSION_TIMEOUT_MS=7200000

# Authentication (REQUIRED)
# Generate a strong random secret: openssl rand -hex 32
JWT_SECRET=some-random-generated-secret

# Docker Configuration
# These match host user for volume permissions
DOCKER_USER=username
DOCKER_UID=1000
DOCKER_GID=1000
DOCKER_TZ=Europe/Paris

# Traefik Configuration
MODE=DEVELOPMENT
TRUSTED_IP_HEADER=
